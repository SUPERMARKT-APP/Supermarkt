SELECT * FROM products_stores
INNER JOIN stores
ON products_stores.stores_id = stores.id
INNER JOIN companies
ON stores.company_id = companies.id
INNER JOIN locations
ON stores.location_id = locations.id
INNER JOIN products
ON products_stores.products_id = products.id
ORDER BY stores_id;


