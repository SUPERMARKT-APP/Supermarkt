SELECT users.name, products.name, products_stores.product_price, stores.store_name, locations.address FROM users_products
INNER JOIN users
ON users_products.users_id = users.id
INNER JOIN products_stores
ON users_products.productstores_id = products_stores.id
INNER JOIN products
ON products_stores.products_id = products.id
INNER JOIN stores
ON products_stores.stores_id = stores.id
INNER JOIN locations
ON stores.location_id = locations.id;