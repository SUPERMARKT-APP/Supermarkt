SELECT products.name, company_name, companies_products.product_price FROM companies
INNER JOIN companies_products
ON companies.company_id = companies_products.companies_company_id
INNER JOIN products
ON companies_products.products_id = products.id
WHERE products.name LIKE '%milk%'
ORDER BY company_name;
